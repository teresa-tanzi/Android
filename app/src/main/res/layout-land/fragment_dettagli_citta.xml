<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.teresa.orologiomondiale.DettagliCittaFragment"
    android:background="#fafafa">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nome_dettaglio_textView"
            style="@style/CustomSmallTitle"/>

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/nome_dettaglio_textView"
            android:layout_alignBottom="@+id/nome_dettaglio_textView"
            android:id="@+id/nazione_dettaglio_textView"
            android:layout_toRightOf="@+id/nome_dettaglio_textView"
            android:layout_marginLeft="75dp"
            style="@style/CustomSmallTitle"/>

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nome_dettaglio_textView"
            android:layout_marginTop="5dp"
            android:id="@+id/timezone_dettaglio_textView" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timezone_dettaglio_textView"
            android:layout_marginTop="5dp"
            android:id="@+id/ora_dettaglio_textView" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ora_dettaglio_textView"
            android:layout_marginTop="5dp"
            android:id="@+id/alba_dettaglio_textView" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alba_dettaglio_textView"
            android:layout_marginTop="5dp"
            android:id="@+id/tramonto_dettaglio_textView" />

        <Button
            android:text="Elimina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tramonto_dettaglio_textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:id="@+id/elimina_citta_button" />

    </RelativeLayout>

</FrameLayout>
