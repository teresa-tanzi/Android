<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.teresa.orologiomondiale.ListaCittaFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="Aggiungi Orologio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aggiungi_orologio_button" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ora qui"
            android:textAlignment="center"
            android:layout_below="@+id/aggiungi_orologio_button"
            android:id="@+id/data_qui_textView"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/data_qui_textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/citta_salvate_listView"/>
    </RelativeLayout>

    <!--Il pulsante per la conversione lo metto nell'activity-->
</FrameLayout>

